#parse("header.vm")

<div id="popup-ajout-projet" class="popup-cadre">
	<div class="popup-titre">
		
	</div>
	<div class="popup-information">
		
	</div>
</div>
<article>
<label>Ajouter projet</label><br>
<form action="./addProject" method="post" enctype="multipart/form-data">
			<label>Titre</label><br/>
			<input id="title" type="text" name="title" title="title" /><br/>
			<label>Image</label>
			<input name="picture" id="picture" title="picture" type="file" /><br>
			<label>Contenu</label><br/>
			<textarea id="text" name="text" title="text" rows="10" cols="35"></textarea>
			<input class="button" type="submit" value="Ajouter" />
		</form>
</article>		
<section>
#foreach ($project in $projects)
	<div class="article">
		<h1>$project.getTitle()</h1>
		#if($project)
			<img src="$project.getPicture()">
		#end
		#if($idUser > 0)
				<form id="" action="./deleteProject" method="post" onsubmit="return confirm('&ecirc;tes vous sur ?');">
					<input type="hidden" name="idProject" value="$project.getId()"/>			
					<input class="supprimer-actualite" type="submit" value="-" />
				</form>

			#end
		
		<div class="project-text">
			$project.getText()
		</div>
	</div>
#end
</section>

<article>
	#if($idUser > 0)
		<input id="ajouter-projet" class="ajouter-actualite" type="button" value="+" />
	#end
</article>

</div>

#parse("footer.vm")